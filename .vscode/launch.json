  "version": "0.2.0",
  "configurations": [
    {
      "name": "Otto",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/otto/",
      "args": [
        "otto.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "9000",
        "--reload"
      ],
      "jinja": false,
      "justMyCode": false
    },
    {
      "name": "Otto Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "cwd": "${workspaceFolder}",
      "args": ["-v"],
      "jinja": false,
      "justMyCode": true
    }
  ]
}
